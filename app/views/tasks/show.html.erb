<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>
  <% if @task.completed %>
    Completed 
  <% else %>
    Not done     
  <% end %>  
</p>

<%= link_to "Edit", edit_path(@task) %>
<%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>
<%= link_to "Back", tasks_path %>